<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textViewUserEmail"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/input_field_flat"
        android:fontFamily="@font/regular"
        android:text=""
        android:textColor="@color/textDark"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewNickname"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.543"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textViewNickname"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="364dp"
        android:background="@drawable/input_field_flat"
        android:ems="10"
        android:fontFamily="@font/regular"
        app:layout_constraintBottom_toTopOf="@+id/buttonEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.433" />


    <TextView
        android:id="@+id/textViewFirstLetter"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/circle"
        android:fontFamily="@font/bold"
        android:text="T"
        android:textAlignment="center"
        android:textColor="@color/grayLight"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewUserEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.775" />

    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_flat"
        android:fontFamily="@font/regular"
        android:text="Edit"
        android:textAllCaps="false"
        android:textColor="@color/grayLight"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:id="@+id/buttonLogOut"
            android:layout_width="431dp"
            android:layout_height="46dp"
            android:layout_marginBottom="112dp"
            android:background="@color/textDark"
            android:fontFamily="@font/regular"
            android:text="Log Out"
            android:textAllCaps="false"
            android:textColor="@color/grayLight"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
            app:layout_constraintVertical_bias="0.481" />


</androidx.constraintlayout.widget.ConstraintLayout>